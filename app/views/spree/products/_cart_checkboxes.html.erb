<% if @product.subscribable? %>
  <div class="subscription_options">
    <br>
    <% subscription = Spree::Subscription.new %>
    <span id="hidden-collection">
      <%= collection_select :subscription, :subscription_frequency_id, @product.subscription_frequencies, :id, :title, {}, { class: "form-control" } %>
    </span>
    <span>
      <% if @product.id == 1 %>
        <%= number_field :subscription, :delivery_number, class: "form-control", value: 1 %>
      <% elsif @product.id == 2 %>
        <%= number_field :subscription, :delivery_number, class: "form-control", value: 3 %>
      <% elsif @product.id == 3 %>
        <%= number_field :subscription, :delivery_number, class: "form-control", value: 6 %>
      <% else @product.id == 4 %>
        <%= number_field :subscription, :delivery_number, class: "form-control", value: 1 %>
      <% end %>
    </span>
    <span>
      <%= label_tag :subscription, Spree.t(:quantity), class: 'text-center' %><span class="required">*</span>
      <br>
      <%= number_field_tag :quantity, 1, class: 'title form-control quantity-width', min: 1 %>
    </span>
    <br>
    <span class='input-group-btn'>
      <%= button_tag class: 'btn btn-lg btn-primary', id: 'subscribe-button', type: :submit, name: :subscribe, value: '1' do %>
        Subscribe Now
      <% end %>
    </span>
  </div>
<% end %>
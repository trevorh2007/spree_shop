<%= render partial: 'spree/shared/error_messages', locals: { target: @spree_user } %>
<div class="login-page-styles">
  <div class="container login-card-margin">
    <div class="card login-card-style">
      <div id="forgot-password">
        <h6 class="text-center login-helpers"><%= Spree.t(:forgot_password) %></h6>

        <p class="text-center"><%= Spree.t(:instructions_to_reset_password) %></p>

        <%= form_for Spree::User.new, as: :spree_user, url: spree.reset_password_path do |f| %>
          <p>
            <%= f.label :email, Spree.t(:email) %><br />
            <%= f.email_field :email, class: "form-control" %>
          </p>
          <p>
            <%= f.submit Spree.t(:reset_password), class: 'bbtn btn-primary btn-block' %>
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>

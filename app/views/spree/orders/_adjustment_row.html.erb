<% if adjustments.sum(&:amount) != 0 %>
  <tr class="adjustment">
    <td colspan="4" align='right'>
      <h5>
        <span class="font-size-11 shipping-to">(Will only be applied when shipping TO Utah)</span> <%= type %>: <%= label %>
      </h5>
    </td>
    
    <td colspan='2'>
      <h5><%= Spree::Money.new(adjustments.sum(&:amount), currency: @order.currency) %></h5>
    </td>
  </tr>
<% end %>

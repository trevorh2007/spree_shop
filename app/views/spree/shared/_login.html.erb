<%= form_for Spree::User.new, as: :spree_user, url: spree.create_new_session_path do |f| %>
  <div id="password-credentials">
    <p>
      <%= f.label :email, Spree.t(:email) %><br />
      <%= f.email_field :email, class: 'title form-control', tabindex: 1, autofocus: true %>
    </p>
    <p>
      <%= f.label :password, Spree.t(:password) %><br />
      <%= f.password_field :password, class: 'title form-control', tabindex: 2 %>
    </p>
  </div>
  <p>
    <%= f.check_box :remember_me, tabindex: 3, class: 'check-box-size' %>
    <%= f.label :remember_me?, Spree.t(:remember_me) %>
  </p>

  <p class="text-center"><%= f.submit Spree.t(:login), class: 'btn btn-primary btn-block', tabindex: 4 %></p>
<% end %>
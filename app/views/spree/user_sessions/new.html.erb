<div class="login-page-styles">
  <div class="container login-card-margin">
      <div class="card login-card-style">

      <% if flash[:alert] %>
        <div class="flash errors"><%= flash[:alert] %></div>
      <% end %>

      <% @body_id = 'login' %>
      <div id="existing-customer">
        <h6 class="text-center login-helpers"><%= Spree.t(:login_as_existing) %></h6>
        <div data-hook="login">
          <%= render partial: 'spree/shared/login' %>
          <div class="text-center login-helpers">
            <%= link_to Spree.t(:create_a_new_account), spree.signup_path %> | <%= link_to Spree.t(:forgot_password), spree.recover_password_path %>
          </div>
        </div>
      </div>

      </div>
  </div>
      <div data-hook="login_extras"></div>
</div>